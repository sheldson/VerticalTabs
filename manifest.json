{
  "manifest_version": 3,
  "name": "VerticalTabs",
  "version": "1.0",
  "description": "Displays tabs in a vertical sidebar on the left side of the browser",
  "permissions": ["tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}